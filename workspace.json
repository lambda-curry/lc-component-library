{
  "version": 2,
  "projects": {
    "ui-components": {
      "root": "packages/ui-components",
      "sourceRoot": "packages/ui-components/src",
      "projectType": "library",
      "targets": {
        "build": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "command": "yarn esbuild",
            "outputPath": "dist",
            "cwd": "packages/ui-components"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "outputs": ["{options.outputFile}"],
          "options": {
            "lintFilePatterns": ["packages/ui-components/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/packages/ui-components"],
          "options": {
            "jestConfig": "packages/ui-components/jest.config.js",
            "passWithNoTests": true
          }
        },
        "storybook": {
          "executor": "@nrwl/storybook:storybook",
          "options": {
            "uiFramework": "@storybook/react",
            "port": 6007,
            "config": {
              "configFolder": "packages/ui-components/.storybook"
            }
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        },
        "build-docs": {
          "executor": "@nrwl/storybook:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "uiFramework": "@storybook/react",
            "outputPath": "docs",
            "config": {
              "configFolder": "packages/ui-components/.storybook"
            }
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        },
        "serve-docs": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "command": "nx build-docs ui-components && npx http-server ./docs -a localhost -p 6007 & npx wait-on http://localhost:6007"
          }
        }
      }
    },
    "ui-components-e2e": {
      "root": "packages/ui-components-e2e",
      "sourceRoot": "packages/ui-components-e2e/src",
      "projectType": "application",
      "implicitDependencies": ["ui-components"],
      "targets": {
        "e2e-local": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "packages/ui-components-e2e/cypress.json",
            "devServerTarget": "ui-components:storybook",
            "tsConfig": "packages/ui-components-e2e/tsconfig.json",
            "record": true
          }
        },
        "serve-docs": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "command": "nx serve-docs ui-components & npx wait-on http://localhost:6007"
          }
        },
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "packages/ui-components-e2e/cypress.json",
            "devServerTarget": "ui-components-e2e:serve-docs",
            "tsConfig": "packages/ui-components-e2e/tsconfig.json",
            "record": true,
            "exit": true
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "outputs": ["{options.outputFile}"],
          "options": {
            "lintFilePatterns": ["packages/ui-components-e2e/**/*.{js,ts}"]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/react"
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    }
  }
}
