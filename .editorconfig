# http://editorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{*.css,*.scss}]
indent_size = 2

[{*.js,*.jsx,*.tsx,*.ts,*.mjs}]
indent_size = 2

[*.json]
indent_size = 2

[*.md,*.mdx]
indent_size = 4
trim_trailing_whitespace = false

[.*rc]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 2
